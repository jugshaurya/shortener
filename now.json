{
  "name": "urlshortner",
  "version": 2,
  "env": {
    "MONGODB_URL": "@urlshortner_db_connection"
  },
  "builds": [
    {
      "src": "server.js",
      "use": "@now/node-server"
    },
    {
      "src": "public/**",
      "use": "@now/static"
    }
  ],
  "routes": [
    {
      "src": "/api/short",
      "dest": "/server.js",
      "methods": ["POST"]
    },
    {
      "src": "/s/(.*)",
      "dest": "/server.js",
      "methods": ["GET"]
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
